<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.huichongzi.fastwidget4android"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        android:label="@string/app_name">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.BannerViewActivity"/>
        <activity android:name=".activity.DragGridViewActivity"/>
        <activity android:name=".activity.FolioListViewActivity"/>
        <activity android:name=".activity.BlindsListViewActivity"/>
        <activity android:name=".activity.WaveBallProgressActivity"/>
        <activity android:name=".activity.ScrollFoldActivity"/>
        <activity android:name=".activity.BookActivity"/>
        <activity android:name=".activity.FloodAndSpreadActivity"/>
        <activity android:name=".activity.SwipeMenuListActivity"/>
        <activity android:name=".activity.WheelActivity"/>
    </application>

</manifest>
